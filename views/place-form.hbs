<form class="add-form" action="/{{lang}}/add-place" method="post">
  <h1>Add Place</h1>
  <label>{{localLang.placeName}}
    <input type="text" name="name" required>
  </label>

  <label>{{localLang.placeDescription}}
    <input type="text" name="description" required>
  </label>

  <label>{{localLang.placeAddress}}
    <input type="text" name="address" required>
  </label>

  <label>{{localLang.placeHours}}
    <input type="text" name="openingHours" required>
  </label>

  <label>{{localLang.formOwnerId}}
    <input type="text" name="ownerId">
  </label>

  <label>{{localLang.formImageUrl}}
    <input type="text" name="imageUrl" required>
  </label>

  <label>{{localLang.placeWebsite}}
    <input type="text" name="website" required>
  </label>

  <label>{{localLang.placePhone}}
    <input type="number" name="phone" required="">
  </label>

  <label>{{localLang.placeEmail}}
    <input type="email" name="email" required="">
  </label>

  <fieldset>
    <legend>{{localLang.placeAccessibility}}</legend>
    <div>
      <label for="audio-recordings">{{localLang.audioRecordings}}</label>
      <input id="audio-recordings" type="checkbox" name="accessibility" value="Audio recordings">
    </div>
    <div>
      <label for="braille">{{localLang.brailleMenu}}</label>
      <input id="braille" type="checkbox" name="accessibility" value="Braille">
    </div>
    <div>
      <label for="big-fonts">{{localLang.bigFonts}}</label>
      <input id="big-fonts" type="checkbox" name="accessibility" value="Big fonts">
    </div>
    <div>
      <label for="carer">{{localLang.carer}}</label>
      <input id="carer" type="checkbox" name="accessibility" value="carer">
    </div>
    <div>
      <label for="guide-dog">{{localLang.guideDog}}</label>
      <input id="guide-dog" type="checkbox" name="accessibility" value="Place for a guide dog">
    </div>
    <div>
      <label for="sms-message">{{localLang.smsMessaging}}</label>
      <input id="sms-message" type="checkbox" name="accessibility" value="SMS messaging">
    </div>
    <div>
      <label for="sign-lang">{{localLang.signLang}}</label>
      <input id="sign-lang" type="checkbox" name="accessibility" value="Sign languge">
    </div>
    <div>
      <label for="good-lighting">{{localLang.goodLighting}}</label>
      <input id="good-lighting" type="checkbox" name="accessibility" value="Good lighting">
    </div>
    <div>
      <label for="wheelchair">{{localLang.wheelchairFriendly}}</label>
      <input id="wheelchair" type="checkbox" name="accessibility" value="WheelChair access">
    </div>
    <div>
      <label for="disabled-parking">{{localLang.disabledParking}}</label>
      <input id="disabled-parking" type="checkbox" name="accessibility" value="Disabled parking">
    </div>
    <div>
      <label for="disabled-toilets">{{localLang.disabledToilet}}</label>
      <input id="disabled-toilets" type="checkbox" name="accessibility" value="Disabled toilets">
    </div>
  </fieldset>

  <fieldset>
    <legend>{{localLang.placeCategories}}</legend>
    <div>
      <label for="cafe">{{localLang.cafe}}</label>
      <input id="cafe" type="checkbox" name="categories" value="cafe">
    </div>
    <div>
      <label for="music-venue">{{localLang.musicVenue}}</label>
      <input id="music-venue" type="checkbox" name="categories" value="music venue">
    </div>
    <div>
      <label for="religios-site">{{localLang.religiousSite}}</label>
      <input id="religios-site" type="checkbox" name="categories" value="religious site">
    </div>
    <div>
      <label for="restaurant">{{localLang.restaurant}}</label>
      <input id="restaurant" type="checkbox" name="categories" value="food and drink">
    </div>
    <div>
      <label for="education">{{localLang.education}}</label>
      <input id="education" type="checkbox" name="categories" value="education">
    </div>
    <div>
      <label for="retail">{{localLang.retail}}</label>
      <input id="retail" type="checkbox" name="categories" value="retail">
    </div>
    <div>
      <label for="sport">{{localLang.sport}}</label>
      <input id="sport" type="checkbox" name="categories" value="sport">
    </div>
    <div>
      <label for="municipal">{{localLang.municipal}}</label>
      <input id="municipal" type="checkbox" name="categories" value="municipal">
    </div>
    <div>
      <label for="healthcare">{{localLang.healthcare}}</label>
      <input id="healthcare" type="checkbox" name="categories" value="healthcare">
    </div>
  </fieldset>

  <input type="submit" value="{{localLang.formSubmit}}">
</form>
