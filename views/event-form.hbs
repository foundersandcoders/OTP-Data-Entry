{{>header}}
{{>options}}

{{#if edit}}
  <form class="" action="/{{lang}}/edit-place/{{event._id}}" method="post">
    <input type="hidden" name="_method" value="put">
{{else}}
  <form class="" action="/{{lang}}/add-event" method="post">
    <input type="hidden" name="_method" value="post">
{{/if}}

<table class="w-100 mw8 center bb b--turquoise bw2">
  <tbody>
    <tr>
      <td class="dark-text f4 b pa3 tr">{{localText.name}}</td>
      <td class="">
        <th class="">
          {{#if event.en.name}}
            <input class="input-reset w-100 br2 ba b--gray" type="text" name="name_en" value="{{event.en.name}}">
          {{else}}
            <input class="input-reset w-100 br2 ba b--gray dib" type="text" name="name_en" placeholder="{{localText.english}}">
          {{/if}}
        </th>
        <th>
          {{#if event.ar.name}}
            <input class="input-reset w-100 br2 ba b--gray" type="text" name="name_ar" value="{{event.ar.name}}">
          {{else}}
            <input class="input-reset w-100 br2 ba b--gray dib" type="text" name="name_ar" placeholder="{{localText.arabic}}">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text f4 b pa3 tr">{{localText.description}}</td>
      <td class="">
        <th class="w-100">
          {{#if event.en.description}}
            <input class="input-reset w-100 br2 ba b--gray" type="text" name="description_en" value="{{event.en.description}}">
          {{else}}
            <input class="input-reset w-100 br2 ba b--gray" type="text" name="description_en" placeholder="{{localText.english}}">
          {{/if}}
        </th>
        <th class="w-100">
          {{#if event.ar.description}}
            <input class="input-reset w5 br2 ba b--gray" type="text" name="description_ar" value="{{event.ar.description}}">
          {{else}}
            <input class="input-reset w5 br2 ba b--gray" type="text" name="description_ar" placeholder="{{localText.arabic}}">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text f4 b pa3 tr">{{localText.placeAddress}}</td>
      <td class="">
        <th>
          <select name="eventPlace">
            <option value="">{{localText.selectPlace}}</option>
            {{#each placesNamesAndIds}}
            <option value="{{this.id}}" {{checkedDropDown ../event.place._id this.id}}>{{this.name}}</option>
            {{/each}}
          </select>
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text db b pa3 tr f4">{{localText.eventStart}}</td>
      <td class="">
        <th class="">
          {{#if event.startTime}}
            <input type="datetime-local" name="startTime" class="input-reset w5 br2 ba b--gray" value="{{event.startTime}}">
          {{else}}
            <input type="datetime-local" name="startTime" class="input-reset w5 br2 ba b--gray">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text db b pa3 tr f4">{{localText.eventEnd}}</td>
      <td class="">
        <th class="">
          {{#if event.endTime}}
            <input type="datetime-local" name="endTime" class="input-reset w5 br2 ba b--gray" value="{{event.endTime}}">
          {{else}}
            <input type="datetime-local" name="endTime" class="input-reset w5 br2 ba b--gray">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text db b pa3 tr f4">{{localText.eventsCost}}</td>
      <td class="">
        <th class="">
          {{#if event.cost}}
            <input type="text" name="cost" class="input-reset w5 br2 ba b--gray" value="{{event.cost}}">
          {{else}}
            <input type="text" name="cost" class=" input-reset w5 br2 ba b--gray">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr class="">
      <td class="dark-text f4 b pa3 tr ">{{localText.formImageUrl}}</td>
      <td class="">
        <th class="w-100">
          {{#if event.imageUrl}}
            <input class="input-reset br2 ba b--gray" type="text" name="imageUrl" value="{{event.imageUrl}}">
          {{else}}
            <input class="input-reset w5 br2 ba b--gray" type="text" name="imageUrl">
          {{/if}}
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text f4 b pa3 tr">{{localText.accessibilityOptions}}</td>
      <td class="">
        <th>
          <label for="audio-recordings" class="light-text">{{localText.audioRecordings}}</label>
          <input id="audio-recordings" type="checkbox" name="accessibility" value="Audio recordings" {{checkOptionsValue place.accessibilityOptions "Audio recordings"}}>
          <label for="braille" class="light-text">{{localText.brailleMenu}}</label>
          <input id="braille" type="checkbox" name="accessibility" value="Braille" {{checkOptionsValue place.accessibilityOptions "Braille"}}>
        </th>
        <th>
          <label for="big-fonts" class="light-text">{{localText.bigFonts}}</label>
          <input id="big-fonts" type="checkbox" name="accessibility" value="Big fonts" {{checkOptionsValue place.accessibilityOptions "Big fonts"}}>
          <label for="carer" class="light-text">{{localText.carer}}</label>
          <input id="carer" type="checkbox" name="accessibility" value="carer" {{checkOptionsValue place.accessibilityOptions "Carer"}}>
        </th>
        <th>
          <label for="guide-dog" class="light-text">{{localText.guideDog}}</label>
          <input id="guide-dog" type="checkbox" name="accessibility" value="Place for guide dog" {{checkOptionsValue place.accessibilityOptions "Place for guide dog"}}>
          <label for="sms-message" class="light-text">{{localText.smsMessaging}}</label>
          <input id="sms-message" type="checkbox" name="accessibility" value="SMS messaging" {{checkOptionsValue place.accessibilityOptions "SMS messaging"}}>
        </th>
        <th>
          <label for="sign-lang" class="light-text">{{localText.signLang}}</label>
          <input id="sign-lang" type="checkbox" name="accessibility" value="Sign language" {{{checkOptionsValue place.accessibilityOptions "Sign language"}}}>
          <label for="good-lighting" class="light-text">{{localText.goodLighting}}</label>
          <input id="good-lighting" type="checkbox" name="accessibility" value="Good lighting" {{checkOptionsValue place.accessibilityOptions "Good lighting"}}>
        </th>
        <th>
          <label for="wheelchair" class="light-text">{{localText.wheelchairFriendly}}</label>
          <input id="wheelchair" type="checkbox" name="accessibility" value="Wheelchair access" {{checkOptionsValue place.accessibilityOptions "Wheelchair access"}}>
          <label for="disabled-parking" class="light-text">{{localText.disabledParking}}</label>
          <input id="disabled-parking" type="checkbox" name="accessibility" value="Disabled parking" {{checkOptionsValue place.accessibilityOptions "Disabled parking"}}>
        </th>
        <th>
          <label for="disabled-toilets" class="light-text">{{localText.disabledToilet}}</label>
          <input id="disabled-toilets" type="checkbox" name="accessibility" value="Disabled toilets" {{checkOptionsValue place.accessibilityOptions "Disabled toilets"}}>
        </th>
      </td>
    </tr>
    <tr>
      <td class="dark-text f4 b pa3 tr">{{localText.categories}}</td>
      <td class="">
        <th>
          <label for="competition" class="light-text">{{localText.competition}}</label>
          <input id="competition" type="checkbox" name="categories" value="cafe" {{checkOptionsValue event.categories "competition"}}>
          <label for="conference" class="light-text">{{localText.conference}}</label>
          <input id="conference" type="checkbox" name="categories" value="conference" {{checkOptionsValue event.categories "conference"}}>
        </th>
        <th>
          <label for="culture" class="light-text">{{localText.religiousSite}}</label>
          <input id="culture" type="checkbox" name="categories" value="culture" {{checkOptionsValue event.categories "culture"}}>
          <label for="dining" class="light-text">{{localText.dining}}</label>
          <input id="dining" type="checkbox" name="categories" value="dining" {{checkOptionsValue event.categories "dining"}}>
        </th>
        <th>
          <label for="educational" class="light-text">{{localText.educational}}</label>
          <input id="educational" type="checkbox" name="categories" value="educational" {{checkOptionsValue event.categories "educational"}}>
          <label for="launch" class="light-text">{{localText.launch}}</label>
          <input id="launch" type="checkbox" name="categories" value="launch" {{checkOptionsValue event.categories "launch"}}>
        </th>
        <th>
          <label for="music" class="light-text">{{localText.music}}</label>
          <input id="music" type="checkbox" name="categories" value="music" {{checkOptionsValue event.categories "music"}}>
          <label for="miscellaneous" class="light-text">{{localText.miscellaneous}}</label>
          <input id="miscellaneous" type="checkbox" name="categories" value="miscellaneous" {{checkOptionsValue event.categories "miscellaneous"}}>
        </th>
        <th>
          <label for="party" class="light-text">{{localText.party}}</label>
          <input id="party" type="checkbox" name="categories" value="party" {{checkOptionsValue event.categories "party"}}>
          <label for="sport" class="light-text">{{localText.sport}}</label>
          <input id="sport" type="checkbox" name="categories" value="sport" {{checkOptionsValue event.categories "sport"}}>
        </th>
        <th>
          <label for="wedding" class="light-text">{{localText.wedding}}</label>
          <input id="wedding" type="checkbox" name="categories" value="wedding" {{checkOptionsValue event.categories "wedding"}}>
        </th>
      </td>
    </tr>
  </tbody>
</table>
<input class="f6 w4 tc grow br-pill ba bw1 b--gray pv2 dib mid-gray b bg-main" type="submit" value="{{localText.formSubmit}}">
</form>
