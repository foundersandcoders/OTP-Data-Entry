{{>header}}
{{>options}}

<a class="f6 ma4 w4 tc grow no-underline br-pill ba bw1 pv2 dib mid-gray b gray" href="/{{lang}}/add-place">{{localText.add}}</a>
<div class="pa4">
  <div class="overflow-auto tc">
    <table class="f6 w-100 mw8 center bb b--turquoise bw2" cellspacing="0">
      <span id="error-container" class="red b"></span>
      <thead>
        <tr class="ma2">
          <th class="fw6 pa3 tr w-25">
            {{#if place.imageUrl}}
              <img src="{{place.imageUrl}}" alt="{{localText.image}}">
            {{else}}
              <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" alt="{{localText.image}}">
            {{/if}}
          </th>
          <th class="f1 tc dark-text">{{place.local.name}}</th>
          <th>
              <a href="/{{lang}}/edit-place/{{place._id}}" class="f6 w4 grow no-underline br-pill ba bw1 pv2 mv2 db mid-gray b gray">{{localText.edit}}</a>
          <th>
            <a href="/{{lang}}/delete-place/{{place._id}}" class="f6 w4 grow no-underline br-pill ba bw1 ph4 pv2 mv2 pv2 db mid-gray b gray">{{localText.delete}}</a>
          </th>
          <th>
            <div id="verify-button" class="f6 w4 grow no-underline br-pill ba bw1 ph3 pv2 {{#if place.verified}} green {{else}} red {{/if}} mv2 db b pointer"> Verify {{#if place.verified}}✔️{{else}}✖️{{/if}}</div>
          </th>
          </th>
        </tr>
      </thead>
      <tbody class="">
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.description}}:</td>
          <td class="tl light-text f4">{{place.local.description}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.placeAddress}}:</td>
          <td class="tl light-text f4">{{place.local.address}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.placeHours}}:</td>
          <td class="tl light-text f4">{{place.local.openingHours}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.placeWebsite}}:</td>
          <td class="tl light-text f4">
            <a href="{{place.website}}">
              {{place.website}}
            </a>
          </td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.placePhone}}:</td>
          <td class="tl light-text f4">{{place.phone}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.placeEmail}}:</td>
          <td class="tl light-text f4">{{place.email}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.accessibilityOptions}}:</td>
          <td class="tl light-text f4">{{translateProps place.accessibilityOptions localText.accOptions lang}}</td>
        </tr>
        <tr class="">
          <td class="tr light-text f4 b pa3">{{localText.categories}}:</td>
          <td class="tl light-text f4">{{translateProps place.categories localText.placeCategories lang}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script src="/verify.js" charset="utf-8" url={{url}}></script>
